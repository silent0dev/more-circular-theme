
<div id="section-activate" class="site-box-container container--fullscreen box--can-stick">

  <div class="site-box box--big lap--box--small-fl-auto box--typo-big box--lots-of-text box--top-align box--column-flow box__heading box--add-hr" data-order="0">
    <div class="reduce-top-margin">
      <div class="site-box-content">
        <h1 class="title h1">{{ 'customers.account_activation_page.title' | t }}</h1>
        {%- if settings.headings_hr -%} <hr /> {%- endif -%}
      </div>
    </div>
  </div>

  <div class="site-box box--big lap--box--bigger box--top-align box--column-flow box__text" data-order="1">

    <div class="site-box-content reduce-top-margin">

      <div class="simple-grid">

        {% form 'activate_customer_password' %}

          <div class="grid__item one-whole">{%- render 'form-errors', form: form -%}</div>

          <p class="grid__item one-whole caption">{{ 'customers.account_activation_page.subtitle' | t }}</p>
        
          <div class="grid__item one-whole">
            <label for="CustomerPassword" class="hidden-label">{{ 'customers.account_activation_page.form_password_label' | t }}</label>
            <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full" placeholder="{{ 'customers.account_activation_page.form_password_label' | t }}">
          </div>

          <div class="grid__item one-whole">
            <label for="CustomerPasswordConfirmation" class="hidden-label">{{ 'customers.account_activation_page.form_password_confirm_label' | t }}</label>
            <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="input-full" placeholder="{{ 'customers.account_activation_page.form_password_confirm_label' | t }}">
          </div>

          <div class="grid__item one-whole">
            <div class="buttons-holder">
              <button type="submit" class="button button--solid">
                <span class="button-scroll-in">{{ 'customers.account_activation_page.form_activate_button' | t }}</span>
              </button>
              <button type="submit" class="button button--outline" name="decline">
                <span class="button-scroll-in">{{ 'customers.account_activation_page.form_decline_button' | t }}</span>
              </button>
            </div>
          </div>

        {% endform %}

      </div>

    </div>

  </div>

</div>


{% schema %}
  {
    "name": "t:sections.local-extra-words.sections.customers.activate-account.name",
    "class": "section--remove-bottom-margin-after"
  }
{% endschema %}